<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
     <%= form_with model: [current_user, @food_pantry] do |form| %>
      <div class="space-y-8 divide-y divide-gray-200">
        <div>
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900"><%= title %></h3>
          </div>

          <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-4">
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-6">
              <%= form.label :address, "Street address", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :address, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :town, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :town, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :state, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :state, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <%= form.label :postal_code, "ZIP / Postal code", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :postal_code, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :phone_1, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.phone_field :phone_1, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :phone_2, "Phone 2 (optional)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.phone_field :phone_2, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.email_field :email, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :url, "Website", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.url_field :url, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :eligibility_criteria, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :eligibility_criteria, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :required_documents, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :required_documents, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :typically_available, "Typically available items", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :typically_available, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :recent_arrivals, "Recentaly arrived items", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :recent_arrivals, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
              </div>
            </div>

            <div class="sm:col-span-6">
              <%= form.label :notes, "Other notes", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_area :notes, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-5">
        <div class="flex justify-end">
          <%= link_to "Cancel", root_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= form.submit "Save", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>